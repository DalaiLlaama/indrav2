{
  "name": "indra-node",
	"version": "4.0.5",
  "description": "",
  "author": "",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build-bundle": "webpack --config ops/webpack.config.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.json\" ",
    "start:debug": "nodemon --config ops/nodemon-debug.json",
    "migration:generate": "typeorm migration:generate -d migrations -n ",
    "prestart:prod": "rm -rf dist && npm run build",
    "start:prod": "node dist/main.js",
    "test": "jest --config ops/jest.config.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@connext/cf-core": "4.0.5",
    "@connext/contracts": "1.0.4",
    "@connext/messaging": "4.0.5",
    "@connext/types": "4.0.5",
    "@nestjs/common": "6.5.3",
    "@nestjs/core": "6.5.3",
    "@nestjs/microservices": "6.5.3",
    "@nestjs/platform-express": "6.5.3",
    "@nestjs/typeorm": "6.2.0",
    "class-validator": "0.11.0",
    "dotenv": "8.2.0",
    "ethers": "4.0.41",
    "human-standard-token-abi": "2.0.0",
    "interval-promise": "1.3.0",
    "ioredis": "4.14.1",
    "nats": "1.3.2",
    "pg": "7.17.0",
    "redlock": "4.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.4",
    "typeorm": "0.2.22",
    "uuid": "3.3.3"
  },
  "devDependencies": {
    "@connext/client": "4.0.5",
    "@nestjs/testing": "6.5.3",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.7",
    "@types/supertest": "2.0.8",
    "concurrently": "5.0.2",
    "jest": "24.9.0",
    "nodemon": "2.0.2",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.5.3",
    "wait-on": "3.3.0",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-node-externals": "1.7.2"
  }
}
